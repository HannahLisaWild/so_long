Name = so_long
CC = cc
CCFLAGS = -Wall -Wextra -Werror
CFLAGS = -g -I/home/hawild/.local/includes
LDFLAGS = -L/home/hawild/.local/lib -lmlx_Linux -lXext -lX11

SRC = src/*.c
OBJ = *.o

all: $(NAME)

$(NAME):
	$(CC) $(CCFLAGS) $(MLX_LIb) $(CFLAGS) $(SRC) -o $(NAME) $(LDFLAGS) 

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re:	fclean all